@page "/"
@using Microsoft.AspNetCore.Mvc
@using WebApp.Models
@using MudBlazor;
@using MudBlazor.Utilities;
@inject IHttpClientFactory HttpClientFactory
@inject IDialogService DialogService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

@if (Grades == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    @foreach (var subjectGroup in Grades.GroupBy(g => g.subject))
    {
        <MudTable Items="subjectGroup" Hover="true" Dense="true" Bordered="true" Class="mb-5">
            <ToolBarContent>
                <MudText Typo="Typo.h6" Class="fw-bold">@subjectGroup.Key</MudText>
                <MudSpacer/>
                <MudText Typo="Typo.h6" Class="fw-bold"
                         Style="@($"color:{GetGradeColor(SubjectAverageGrade(subjectGroup))}")">Average
                    grade: @SubjectAverageGrade(subjectGroup)</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Grade</MudTh>
                <MudTh>Percentage</MudTh>
                <MudTh>Date</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd Style="text-align: center; max-width: 20px"><MudIconButton Icon="@Icons.Material.Filled.DeleteForever" Color="Color.Error" OnClick="@(() => RemoveGradeAsync(context.id))"></MudIconButton>
                    @FormatGrade(context.grade)</MudTd>
                <MudTd>@context.percentageInfluence%</MudTd>
                <MudTd>@context.dateAdded</MudTd>
            </RowTemplate>
            <FooterContent>
                <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Success"
                               OnClick="@(() => OpenDialogAsync(subjectGroup.FirstOrDefault()))"></MudIconButton>
            </FooterContent>
            
        </MudTable>
    }
}